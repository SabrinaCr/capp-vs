<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CottonApp.Views.LoginPages.LoginPage">

    <StackLayout Padding="30, 150, 30, 0" Spacing="20">
        <Entry x:Name="Login" Placeholder="Login ou Email"></Entry>
        <Entry x:Name="Senha" Placeholder="Senha" IsPassword="True"></Entry>
        <Label x:Name="Registrar" Text="       Não possui usuário registrado? Cadastre-se" ></Label>

        <Button x:Name="Entrar" Text="Entrar" Style="{StaticResource button-save}" Clicked="Button_OnEntrarClicked"></Button>
    </StackLayout>
</ContentPage>