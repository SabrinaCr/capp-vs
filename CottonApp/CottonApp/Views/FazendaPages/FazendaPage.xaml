<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CottonApp.Views.FazendaPages.FazendaPage"
             Title="Cadastrar Fazenda">

    <StackLayout Padding="20, 70, 20, 0" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Entry x:Name="Nome" Placeholder="Nome da Fazenda"></Entry>
        <Entry x:Name="Hectares" Placeholder="Hectares" Keyboard="Numeric"></Entry>
        <Entry x:Name="Observacoes" Placeholder="Observações"></Entry>
        
        <Button x:Name="Proximo" Text="Proximo" Style="{StaticResource button-save}" Clicked="ProximoClicked"></Button>

        <ListView x:Name="Lista">
        </ListView>
    </StackLayout>
</ContentPage>