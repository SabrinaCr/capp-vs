<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CottonApp.Views.FazendaPages.FazendaInfoContatoPage"
             Title="Informações de Contato">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LabelInformacoesContato" Style="{StaticResource label-dados-pessoais}" Text="      Informações de Contato"></Label>
            <StackLayout Padding="20, 70, 20, 10" Spacing="20">
                <Entry x:Name="Email" Placeholder="Email" Keyboard="Email"/>
                <Entry x:Name="EnderecoWeb" Placeholder="Endereço Web"/>
                <Entry x:Name="Telefone" Placeholder="Telefone" Keyboard="Telephone"/>

                <Button x:Name="Salvar" Text="Salvar" Style="{StaticResource button-save}" Clicked="SalvarClicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>